---

<div data-scroll-section class="maxhfix relative h-screen flex justify-center items-center overflow-x-hidden">
  <p data-scroll data-scroll-speed="2" class="text-6xl md:text-9xl z-[1]">PRODUCTS</p>
  <p data-scroll-speed="1" class="text-8xl md:text-[20rem] absolute text-white stroke">PRODUCTS</p>
</div>

<div x-data="{search : '', lists:[]}" x-init="$watch('search', (value) => searchProduct(value))"
  data-scroll-section class="container mx-auto px-6 md:px-10 mt-12 space-y-8">
  <div class="flex justify-start">
    <%- include('mini/search') %>
  </div>
  <div :class="search.length > 0?'grid':'hidden'" class="gap-5 grid-cols-2 sm:grid-cols-3 md:gap-10 lg:grid-cols-4">
    <template x-for="list in lists">
      <%- include('page/card2Alpine') %>
    </template>
  </div>
  <div :class="search.length > 0?'hidden':'grid'" class="grid gap-5 grid-cols-2 sm:grid-cols-3 md:gap-10 lg:grid-cols-4">
    <% site.pages.filter(page=> page.data.type).forEach(page => { %>
    <%- include('page/card2Search',{
      name: page.data.name,
      img:page.data.img,
      link: page.actualpath,
      productname:page.data.name,
      productType:page.data.type
    }) %>
    <% }) %>
  </div>
</div>