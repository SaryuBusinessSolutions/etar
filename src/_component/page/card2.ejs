<a href="<%- link %>">
  <div class="bg-neutral-50 rounded-2xl flex flex-col p-4 py-6 md:px-8 relative overflow-hidden group hover:shadow-xl transition-shadow duration-300 ease-in-out">
    <div data-scroll data-scroll-speed="1" class="flex-[2] z-[1]">
      <%- include('../mini/img',{
        alt : "product",
        src : "img/products/small/"+img,
        pictureclass : "group-hover:scale-95 transition-all duration-500 ease-in-out",
        classes : "",
      }) %>
    </div>
    <div class="flex-[3] z-[1] space-y-4 flex flex-col justify-between">
      <p class="lg:text-xl group-hover:tracking-wide transition-all duration-500 ease-in-out uppercase"><%- name %></p>
      <div>
      <% features.forEach(feature => { %>
      <p class="text-xs md:text-sm text-gray-500"><%-feature.name%></p>
      <% }) %>
      </div>
      <div>
        <div class="button-1 rounded-md px-5 mr-auto text-xs lg:text-base cursor-pointer">VIEW MORE</div>
      </div>
    </div>
    <div class="circle-bg w-full bg-neutral-100 top-[-15%] left-[-15%] group-hover:shadow-md transition-shadow duration-300 ease-in-out"></div>
  </div>
</a>