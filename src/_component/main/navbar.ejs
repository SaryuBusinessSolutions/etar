<header id="navbar" class="fixed w-full z-[9] opacity-100 bg-white bg-opacity-20 backdrop-blur-[2px]">
  <div class="flex w-full container mx-auto justify-between items-center py-2 px-6 md:px-3">
    <a href="<%- page.srcfix %>">
      <img class="w-20 lg:w-24 2xl:w-32" src="<%- page.srcfix %>img/logo.png" alt="">
    </a>
    <div @click="navTogle(navOpen)">
      <svg width="30" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
        <rect y="8" class="transition duration-300" rx="3.5"
          :class="navOpen ? 'rotate-[35deg] origin-center translate-y-[14.5%] translate-x-[-14.5%]':'rotate-0 origin-center translate-y-0 translate-x-0'"
          width="40" height="7" fill="black" />
        <rect y="23" class="transition duration-300" rx="3.5"
          :class="navOpen ? 'rotate-[-35deg] origin-center translate-y-[-14.5%] translate-x-[-14.5%]':'rotate-0 origin-center translate-y-0 translate-x-0'"
          width="40" height="7" fill="black" />
      </svg>
    </div>
  </div>
</header>
<div @click="navTogle(navOpen)" :class="navOpen || 'hidden'"
  class="fixed top-0 left-0 w-full h-full z-[8] bg-white bg-opacity-20 backdrop-blur-[8px] flex items-center">
  <div class="container mx-auto px-6 md:px-3 space-y-5 flex flex-col justify-center items-center">
    <a href="<%- page.srcfix %>"
      class="text-5xl navlink transition-all duration-500 ease-in-out translate-x-[200%] md:translate-x-[600%]">HOME</a>
    <a href="<%- page.srcfix %>products"
      class="text-5xl navlink transition-all duration-500 ease-in-out translate-x-[200%] md:translate-x-[600%]">PRODUCTS</a>
    <a href="<%- page.srcfix %>about"
      class="text-5xl navlink transition-all duration-500 ease-in-out translate-x-[200%] md:translate-x-[600%]">ABOUT</a>
    <a href="<%- page.srcfix %>contact"
      class="text-5xl navlink transition-all duration-500 ease-in-out translate-x-[200%] md:translate-x-[600%]">CONTACT</a>
  </div>
</div>

<div data-scroll-section id="navfix"></div>
<%- include('sidesocial') %>